@model  IEnumerable<RadniSati.Models.Projekt>



@{
    ViewBag.Title = "PopisProjekata";
}


<style>

    h2 {
        margin: 20px 0px 20px 0px;
    }

    h3 {
        margin: 30px 0px 30px 0px;
    }

    p {
        margin: 20px 0px 20px 0px;
    }




    input[type=submit] {
        background-color: #0094ff;
        color: white;
        margin: 0px 10px 0px 10px;
        border-width: 0px;
        border: none;
    }

    span[class="glyphicon glyphicon-lock"], 
    span[class="glyphicon glyphicon-backward"] 
    { margin: 0px 10px 0px 10px;

    }
</style>




<div class="container">
    <h2>Popis projekata</h2>

    <div class="row no-gutters">
        <div class="col-10 col-sm-4 col-md-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Izbornik/Izbornik">Izbornik</a></li>
                    <li class="breadcrumb-item"><a href="~/Projekt/Index">Projekt</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Popis projekata</li>
                </ol>
            </nav>
        </div>
    </div>




    <h3>Izaberi projekt</h3>

    <hr />
</div>




<div class="container-fluid">



    @foreach (var item in Model)
    {
        using (Html.BeginForm("DetaljiProjekt", "Projekt", new { id = item.Sifra, naziv = item.Naziv, opis =item.Opis, pm=item.PM, klijent = item.Klijent }, FormMethod.Post))
        {
    <p>

        <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>


        @Html.DisplayFor(modelItem => item.Naziv)



        <input type="submit" value="Detalji" />





    </p>
        }


    }
            <p>

                <span class="glyphicon glyphicon-backward" aria-hidden="true"></span>

                @Html.ActionLink("Povratak", "Index", "Projekt")

            </p>

</div>